---
import { Picture } from "astro:assets";
import VisitUsPic from "assets/visituspic2.png";
import Link from "@components/ui/link.astro";
---

<main class="grid lg:grid-cols-2 lg:items-center place-items-center w-full overflow-hidden py-[4rem] lg:px-8 space-y-[4rem] lg:space-y-0 fade-up fade-up-small fade-in-fast">
  
  <div class="lg:order-2 space-y-[4rem] lg:p-[2rem] xl:p-[4rem] fade-left fade-in-fast flex flex-col justify-center">
    <!-- Option 1: Using negative margins to pull content closer -->
    <h1 class="text-7xl lg:text-8xl 2xl:text-9xl font-semibold text-center lg:text-left text-pc  -mb-6 lg:-my-8 2xl:-my-8">
      VISIT US
    </h1>
    
    <p class="text-md lg:text-lg 2xl:text-xl font-normal text-center lg:text-left text-bc font-serif lg:leading-[150%] xl:leading-[200%] 2xl:leading-[250%]">
        Stop by for a scoop, a shake, or a cone warm from the waffle iron. Friendly faces, nostalgic vibes, and plenty of flavors waiting to be tasted.    
    </p>
    
    <div class="text-md lg:text-lg 2xl:text-xl text-center lg:text-left">
         <Link href="/locations" size="md">VIEW HOURS & LOCATION</Link>
    </div>
  </div>

  <div class="flex justify-center items-center order-2 lg:order-1 fade-in scale-up lg:p-[2rem] xl:p-[3rem] 2xl:p-[4rem]">
    <Picture
      src={VisitUsPic}
      alt="icecream"
      formats={['avif', 'webp']}
      fallbackFormat="jpg"

    />
  </div>

</main>
