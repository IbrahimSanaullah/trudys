---
import { Picture } from "astro:assets";
import Social1 from "assets/social1.png";
import Social2 from "assets/social2.png";
import Social3 from "assets/social3.png";
import Social4 from "assets/social4.png";
import Link from "@components/ui/link.astro";
import Icon from "astro-icon";
---

<main class="place-items-center w-full overflow-hidden py-[4rem] lg:py-[8rem]">
  <div class="space-y-[4rem]">
    <h1
      class="font-noto text-5xl xl:text-6xl font-semibold text-center text-sc fade-in-fast -mb-6">
      FOLLOW OUR SOCIALS
    </h1>

    <div class="flex justify-center items-center gap-8 fade-in-fast">
      <a href="https://www.facebook.com/profile.php?id=100089642787030&mibextid=ZbWKwL" target="_blank">
        <Icon
          class="h-10 w-10 lg:h-12 lg:w-12 text-pc"
          name="ic:baseline-facebook"
        />
      </a>
      <a href="https://www.instagram.com/trudysicecream/" target="_blank">
        <Icon class="h-10 w-10 lg:h-12 lg:w-12 text-pc" name="mdi:instagram" />
      </a>
    
    </div>

    <div
      class="grid grid-cols-2 lg:grid-cols-4 place-items-center gap-4 lg:gap-8 w-full overflow-hidden">
      <div class="fade-up-small logo fade-in-fast">
        <Picture
          src={Social1}
          alt="icecream"
          formats={["avif", "webp"]}
          fallbackFormat="jpg"
        />
      </div>

      <div class="fade-up-small logo fade-in-fast">
        <Picture
          src={Social2}
          alt="icecream"
          formats={["avif", "webp"]}
          fallbackFormat="jpg"
        />
      </div>

      <div class="fade-up-small logo fade-in-fast">
        <Picture
          src={Social3}
          alt="icecream"
          formats={["avif", "webp"]}
          fallbackFormat="jpg"
        />
      </div>

      <div class="fade-up-small logo fade-in-fast">
        <Picture
          src={Social4}
          alt="icecream"
          formats={["avif", "webp"]}
          fallbackFormat="jpg"
        />
      </div>
    </div>
  </div>
</main>
