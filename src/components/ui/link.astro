---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-7 py-2.5",
  md: "px-6 py-2",
};

const styles = {
  outline: "bg-none border-2 border-wc hover:bg-wc hover:text-pc text-wc ",
  primary: "text-white bg-sc hover:bg-pc border-2 border-transparent",
  inverted: "bg-white text-sc  border-2 border-transparent hover:bg-sc hover:text-white",
  muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-2xl text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200" ,
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
